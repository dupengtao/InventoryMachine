<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/global_button_end_color"
                android:startColor="@color/global_button_start_color"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/global_button_end_color"
                android:startColor="@color/global_button_start_color"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/global_button_press_color"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/global_button_enable_false"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/global_button_end_color"
                android:startColor="@color/global_button_start_color"/>
        </shape>
    </item>

</selector>